<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('../partials/head.ejs'); %>
  <title>Investor Portfolio</title>
</head>
<body>
  <div class="container">
    <h1>Investor Portfolio</h1>

    <!-- Portfolio Details -->
    <% if (portfolio) { %>
      <section>
        <h2>Portfolio for Investor ID: <%= portfolio.investorid %></h2>
        <h3>Stocks</h3>
        <% if (portfolio.stocks && portfolio.stocks.length > 0) { %>
          <ul>
            <% portfolio.stocks.forEach(stock => { %>
              <li><%= stock.stockname %> (<%= stock.abbreviation %>): <%= stock.quantity %> shares</li>
            <% }) %>
          </ul>
        <% } else { %>
          <p>No stocks in portfolio.</p>
        <% } %>

        <h3>Bonds</h3>
        <% if (portfolio.bonds && portfolio.bonds.length > 0) { %>
          <ul>
            <% portfolio.bonds.forEach(bond => { %>
              <li><%= bond.bondname %> (<%= bond.abbreviation %>): <%= bond.quantity %> bonds</li>
            <% }) %>
          </ul>
        <% } else { %>
          <p>No bonds in portfolio.</p>
        <% } %>
      </section>
    <% } else { %>
      <p>No portfolio data available. Please check the investor ID.</p>
    <% } %>
  </div>
  <a href="/">Back to Home</a>
</body>
</html>
